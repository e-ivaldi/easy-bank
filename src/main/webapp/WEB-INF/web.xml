<?xml version="1.0" encoding="UTF-8"?>

<web-app version="3.0"
         xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         metadata-complete="false">
         
    <!-- setup the location of the root context -->
	<context-param>
    	<param-name>contextConfigLocation</param-name>
    	<param-value>classpath:context/root-context.xml</param-value>
 	</context-param>
 	
 	<!-- setup the active spring profile (beans with this profile are being used despite same beans (same id) in different profiles ) -->
 	<context-param>
	    <param-name>spring.profiles.active</param-name>
	    <param-value>dev</param-value>
	</context-param>
 	
 	<!-- setup the spring context listener -->
	<listener>
    	<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
  	</listener>
  	
  	<!-- setup the spring dispatcher servlet and the servlet context location -->
	<servlet>
    	<servlet-name>appServlet</servlet-name>
    	<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
    	<init-param>
      		<param-name>contextConfigLocation</param-name>
      		<param-value>classpath:context/servlet/servlet-context.xml</param-value>
    	</init-param>
    	<load-on-startup>1</load-on-startup>
  	</servlet>
  	
  	<!-- setup the mapping used by the dispatcher servlet -->
  	<servlet-mapping>
    	<servlet-name>appServlet</servlet-name>
    	<url-pattern>/</url-pattern>
	</servlet-mapping>
	
	<!-- setup the spring security filter -->
	<filter>
    	<filter-name>springSecurityFilterChain</filter-name>
    	<filter-class>org.springframework.web.filter.DelegatingFilterProxy</filter-class>
  	</filter>
  	
  	<!-- setup the mapping used by the spring filter -->
	<filter-mapping>
    	<filter-name>springSecurityFilterChain</filter-name>
    	<url-pattern>/*</url-pattern>
  	</filter-mapping>
  	
  	<!-- static page used for the 404 error (page not found) -->
  	<error-page>
		<error-code>404</error-code>
		<location>/page-not-found</location>
	</error-page>
         
</web-app>

